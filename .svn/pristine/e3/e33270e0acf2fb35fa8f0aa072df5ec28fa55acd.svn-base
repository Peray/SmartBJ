    .compass-north {
        position: absolute;
        top: 20px;
        left: 40px;
        width: 40px;
        height: 20px;
        background-image: url("../../img/vcm/3d-controls-north.png");
        cursor: pointer;
    }
    .compass-south {
        position: absolute;
        top: 80px;
        left: 40px;
        width: 40px;
        height: 20px;
        background-image: url("../../img/vcm/3d-controls-south.png");
        cursor: pointer;
    }
    .compass-center {
        position: absolute;
        top: 40px;
        left: 35px;
        width: 50px;
        height: 40px;
        background-image: url("../../img/vcm/3D.png");
        background-repeat: no-repeat;
        background-position: center center;
        cursor:pointer;
    }
    .compass-west {
        position: absolute;
        top: 40px;
        left: 20px;
        width: 20px;
        height: 40px;
        background-image: url("../../img/vcm/3d-controls-west.png");
        cursor: pointer;
    }
    .compass-east {
        position: absolute;
        top: 40px;
        right: 20px;
        width: 20px;
        height: 40px;
        background-image: url("../../img/vcm/3d-controls-east.png");
        cursor: pointer;
    }
    .compass-center1 {
        position: absolute;
        top: 40px;
        left: 35px;
        width: 50px;
        height: 40px;
        background-image: url("../../img/vcm/2D.png");
        background-repeat: no-repeat;
        background-position: center center;
        cursor:pointer;
    }
    .slope {
      position: absolute;
      top: 120px;
      left: 0;
      width: 120px;
      height: 40px;
      line-height: 50px;
      z-index: 20;
      text-align: center;
    }
    .slope>span{
        display: inline-block;
        width:30px;
        height:20px;
        cursor: pointer;
    }
    .slope_3d{
        background: url("../../img/vcm/tilt-down.png") no-repeat center center;
    }
    .slope_2d{
        background: url("../../img/vcm/tilt-up.png") no-repeat center center;
    }
}
