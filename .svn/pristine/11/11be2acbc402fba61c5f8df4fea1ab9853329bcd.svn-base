#circle span {
    font-size: 18px;
    color: #b0b0b0;
}

#circle .clock {
    background: url(../img/time/clock.png) no-repeat 0 0;
    width: 83px;
    height: 83px;
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    -webkit-transition: all 0.5s linear;
    -moz-transition: all 0.5s linear;
    -o-transition: all 0.5s linear;
    transition: all 0.5s linear;
    border-radius: 0;
}

#circle:hover .clock {
    border-radius: 83px;
}

.timeyear {
    color: #b0b0b0;
    font-size: 18px;
    line-height: 20px;
}

.timeblock {
    height: 28px;
    margin-top: 22px;
    margin-left: 5px;
}

.timeblock span {
    display: block;
    height: 24px;
    width: 18px;
    background: url(../img/time/date.png) no-repeat 0 0;
    float: left;
}

.timeblock .numf {
    background-position: 0px -48px;
}

.timeblock .nums {
    background-position: 0px 0px;
}

.timeblock .numt {
    background-position: 0px -24px;
}

.timeblock .numfo {
    background-position: 0px -72px;
}

#content {
    background: url(../img/time/vertical.png) no-repeat 103px 2px;
    padding-top: 10px;
    margin-bottom: 184px;
}

.list {
    overflow: hidden;
    position: relative;
}

.list li {
    height: 220px;
    vertical-align: bottom;
    overflow: hidden;
    position: relative;
}

.liwrap {
    height: 220px;
    /*margin-top:28px;*/
}

.lileft {
    position: absolute;
    top: 0;
    left: 0px;
    height: 55px;
    width: 80px;
    line-height: 55px;
    text-align: right;
}

.liright {
    position: absolute;
    top: 0px;
    left: 130px;
    /*height: 55px;*/
    width: 300px;
}

.histt {
    width: 300px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 25px;
    line-height: 25px;
}

.hisct {
    font-size: 14px;
    color: #6e6e6e;
}

.hisct>img {
    width: 300px;
    height: 160px;
}

.md {
    font-size: 12px;
    color: #AEAEAE;
}

.year {
    font-size: 12px;
    color: #AEAEAE;
}

.point {
    width: 55px;
    height: 55px;
    position: absolute;
    top: 0;
    left: 78px;
    background: url(../img/time/point.png) no-repeat 0px 18px;
    overflow: hidden;
}

.point b {
    height: 16px;
    width: 16px;
    background: #fff;
    display: block;
    margin: 17px 0 0 19px;
    border-radius: 18px;
    border: 2px solid #6bc30d;
    -webkit-transition: all 0.1s linear;
    -moz-transition: all 0.1s linear;
    -o-transition: all 0.1s linear;
    transition: all 0.1s linear;
    position: absolute;
    top: 0;
    left: 0;
}

.thiscur .point b {
    border: 7px solid rgba(107, 195, 13, 0.6);
    margin: 12px 0px 0px 14px;
    border-radius: 52px;
}

.thiscur .histt a {
    color: #6bc30d;
}

.histt a {
    font-size: 12px;
    color: #747474;
    -webkit-transition: all 0.3s linear;
    -moz-transition: all 0.3s linear;
    -o-transition: all 0.3s linear;
    transition: all 0.3s linear;
}

#arrow {
    position: fixed;
    top: 50%;
    right: 10px;
    z-index: 1;
    margin-top: -25px;
}

*html #arrow {
    position: absolute;
    top: expression(eval(document.documentElement.scrollTop));
    margin-top: 350px;
}

#arrow ul li {
    display: block;
    height: 20px;
    width: 20px;
    background: url(../img/time/icons.png) no-repeat 0 0;
    cursor: pointer;
    -webkit-transition: all 0.2s ease-out;
    -moz-transition: all 0.2s ease-out;
    -o-transition: all 0.2s ease-out;
    transition: all 0.2s ease-out;
}

#arrow ul li:active {
    background-color: #000;
}

#arrow ul .arrow_active {
    background-color: #000;
    -webkit-transition: all 0.1s ease-in;
    -moz-transition: all 0.1s ease-in;
    -o-transition: all 0.1s ease-in;
    transition: all 0.1s ease-in;
}

#arrow ul .arrowup {
    background-position: 0px -26px;
    margin-bottom: 10px;
}

#arrow ul .arrowdown {
    background-position: 0px 0px;
}
