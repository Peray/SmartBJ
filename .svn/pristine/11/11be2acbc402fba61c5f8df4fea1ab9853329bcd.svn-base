@charset "utf-8";
a,
img {
    border: 0;
}

body {
    _background-image: url(about:blank);
    /*用浏览器空白页面作为背景*/
    _background-attachment: fixed;
    /* prevent screen flash in IE6 确保滚动条滚动时，元素不闪动*/
}

.clear {
    clear: both;
    display: block;
    height: 0;
    overflow: hidden;
}


/* history */

#history {
    height: 450px;
    position: relative;
    margin: 10px auto 0 auto;
}

.title {
    height: 95px;
    line-height: 95px;
}

#circle {
    width: 83px;
    height: 83px;
    position: absolute;
    top: 0;
    left: 60px;
    border: 6px solid rgba(0, 0, 0, 0.15);
    border-radius: 95px;
    text-indent: 0;
    text-align: center;
    -webkit-transition: all 0.3s linear;
    -moz-transition: all 0.3s linear;
    -o-transition: all 0.3s linear;
    transition: all 0.3s linear;
}

#circle .cmsk {
    height: 83px;
    position: absolute;
    width: 83px;
    top: 0;
    left: 0;
}


