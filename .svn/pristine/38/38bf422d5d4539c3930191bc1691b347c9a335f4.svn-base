form {
    width: 700px;
    margin: 0 auto;
    padding: 50px 0 100px;
    color: #575757;
    font-size: 16px;
}
form>table{
	margin: auto;
}
tr {
    height: 65px;
}

tr>td:nth-child(1) {
    text-align: right;
}

.input_style {
    border: 1px solid #959595;
    width: 300px;
    height: 35px;
    border-radius: 3px;
    padding-left: 10px;
}

tr>td:nth-child(3) {
    color: #e83636;
}

.btn_application>input[type=submit] {
    display: block;
    margin: 15px auto;
    width: 200px;
    height: 40px;
    border: 1px solid #29d;
    font-size: 18px;
    color: #29d;
    background-color: #fff;
    cursor: pointer;
    -webkit-transition: background-color 0.5s linear;
    -o-transition: background-color 0.5s linear;
    transition: background-color 0.5s linear;
    -webkit-transition: color 0.5s linear;
    -o-transition: color 0.5s linear;
    transition: color 0.5s linear;
}

.btn_application>input[type=submit]:hover {
    background-color: #29d;
    color: #fff;
}

tr.success {
    height: auto;
    text-align: center;
    color: #29d;
    font-size: 14px;
}
