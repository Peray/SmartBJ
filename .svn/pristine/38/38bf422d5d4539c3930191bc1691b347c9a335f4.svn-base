header {
    background: url(../img/sq_bg_02.png) no-repeat center;
}

.flow {
    position: absolute;
    top: 60px;
    width: 100%;
}

.flow_img {
    width: 374px;
    height: 62px;
    line-height: 45px;
    font-size: 20px;
    letter-spacing: .3em;
    text-align: center;
    margin: 50px auto 0;
    background: url(../img/liucheng/03_03.png) no-repeat;
    color: #DC3022;
}

.flow_span {
    width: 870px;
    text-align: center;
    margin: 50px auto 0;
}

.flow_span>span {
    float: left;
}

.flow_span>span:nth-child(odd) {
    display: inline-block;
    width: 110px;
    height: 110px;
}

.flow_text {
    color: #fff;
    font-size: 18px;
}

.flow_span>span:nth-child(even) {
    display: inline-block;
    width: 80px;
    height: 110px;
    line-height: 110px;
    text-align: center;
}

.flow_span>span:nth-child(even)>img {
    vertical-align: middle;
}


